# Revo Library Environment Variables Example
# Copy this file to .env and modify the values as needed

# Required Revo API credentials
REVOS_CLIENT_ID=your_revo_client_id_here
REVOS_CLIENT_SECRET=your_revo_client_secret_here

# Optional Revo API settings
REVOS_TOKEN_URL=https://your-site.com/revo/oauth/token
REVOS_BASE_URL=https://your-site.com/revo/llm-api
REVOS_TOKEN_BUFFER_MINUTES=5
REVOS_MAX_RETRIES=3
REVOS_REQUEST_TIMEOUT=30

# =============================================================================
# LLM CONFIGURATION
# =============================================================================

# Single LLM settings (for backward compatibility)
# These settings are used when you only need one model
LLM_MODEL=gpt-3.5-turbo
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=1024
LLM_TOP_P=1.0
LLM_FREQUENCY_PENALTY=0.0
LLM_PRESENCE_PENALTY=0.0

# =============================================================================
# MULTIPLE LLM MODELS CONFIGURATION
# =============================================================================

